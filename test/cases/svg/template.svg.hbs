<svg xmlns="http://www.w3.org/2000/svg" width="200" height="200">
  <line
    x1="0"
    y1="0"
    x2="200"
    y2="200"
    stroke="{{color}}"
    stroke-width="8"
  ></line>
  {{#with color}}
    <line
      x1="0"
      y1="0"
      x2="200"
      y2="200"
      stroke="{{.}}"
      stroke-width="4"
    ></line>
  {{/with}}
  {{#each words}}
    <text x="20" y="20">{{this}}</text>
    <text x="100" y="20" fill="{{../color}}">{{.}}</text>

    {{> text . }}
    {{> text ../color }}
  {{/each}}
  {{#showCircle}}
    <circle cx="100" cy="100" r="10" />
  {{/showCircle}}
  {{#unless showCircle}}
    <rect x1="100" y1="100" x2="110" y2="110" />
  {{/unless}}

</svg>